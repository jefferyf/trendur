<head>
<meta charset="utf-8">
<title><%= yield(:title) || "Trendur" %></title>
<meta name="description" content="">
<meta name="author" content="">
<meta name="viewport" content="width=device-width,initial-scale=1">

<%= stylesheet_link_tag 'application' %>
<%= javascript_include_tag 'application' %>
<%= csrf_meta_tag %>
<%= yield(:head) %>
</head>
<body>
<%= render "/shared/header" %>

<!-- Container Start -->
<div id="container" class="wrapper clearfix">
  <div class="wrapper">
    <div id="announcements">
    	<a class="minus" href="#">Remove</a>
    </div>
  </div>

<%= render "/shared/navigation" %>
  <!-- Main Feed Start -->
  <div id="main_feed">
    <div id="user_area">
		<a href="#" class="btn stream">Customize Your Stream</a>
    <a href="/auth/twitter" id="twitter_signin">
      <%= image_tag "sign-in-with-twitter-d.png", :alt => "Sign in with twitter" , :size => "151x24" %>
    </a>
    </div>

<%= yield %>
<%#= render "/shared/tweets" %>

  </div>
  <!-- Main Feed End --> 

<%= render "/shared/right-column" %>

  
  <footer> </footer>
</div>
<!-- Container End --> 


<!-- scripts concatenated and minified via ant build script--> 
<script defer src="<%= asset_path "plugins.js" %>"></script> 
<script defer src="<%= asset_path "script.js" %>"></script> 
<!-- end scripts--> 

<script> // Change UA-XXXXX-X to be your site's ID
    window._gaq = [['_setAccount','UAXXXXXXXX1'],['_trackPageview'],['_trackPageLoadTime']];
    Modernizr.load({
      load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
    });
  </script> 

<!--[if lt IE 7 ]>
    <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
  <![endif]-->

</body>
</html>